@model IEnumerable<TechnicalShare.Models.Mentor>

@{
    ViewData["Title"] = "Mentores Front-End";
}
<h2>
    @ViewData["Title"]
</h2>

<h3>Nossos Mentores Front-End</h3>

<p>Filtros:</p>
<a asp-controller="Mentor" asp-action="Index">Limpar Filtro</a>
<a asp-controller="Mentor" asp-action="Backend">Back-End</a>

<table class="table table-striped table-hover" id="table-mentor">
    <thead>
        <tr>
            <th>
                nome
            </th>
            <th>
                email
            </th>
            <th>
                área de atuação
            </th>
            <th>
                nível de experiência
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expertise.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    <a asp-action="Profile" asp-route-id="@item.Id">ver perfil</a>
                </td>

            </tr>
        }
    </tbody>

</table>