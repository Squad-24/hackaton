@model IEnumerable<TechnicalShare.Models.Mentor>

@{
    ViewData["Title"] = "você pode encontrar seu mentor por área de mentoria";
}
<h2 style="margin-top:50px">
    @ViewData["Title"]
</h2>

<div style="margin-top:50px;" class="nav-tabs">
    <div class="nav-tabs-justified">
        <div>
            <div style="margin-top:50px;" class="nav-tabs">
                <div class="container">
                    <div class="row">
                        <div role="list" class="col-md-1">
                            <div role="listitem">
                                <a href="expertises/backend" class="btn btn-default">back-end</a>
                            </div>
                        </div>
                        <div role="list" class="col-md-1">
                            <div role="listitem">
                                <a href="expertises/devops" class="btn btn-default">devops</a>
                            </div>
                        </div>
                        <div role="list" class="col-md-1">
                            <div role="listitem">
                                <a href="expertises/frontend" class="btn btn-default">front-end</a>
                            </div>
                        </div>
                        <div role="list" class="col-md-1">
                            <div role="listitem">
                                <a href="expertises/mobile" class="btn btn-default">mobile</a>
                            </div>
                        </div>
                        <div role="list" class="col-md-2">
                            <div role="listitem">
                                <a href="expertises/productmanagement" class="btn btn-default">product management</a>
                            </div>
                        </div>
                        <div role="list" class="col-md-1">
                            <div role="listitem">
                                <a href="expertises/uidesign" class="btn btn-default">ui design</a>
                            </div>
                        </div>
                        <div role="list" class="col-md-1">
                            <div role="listitem">
                                <a href="expertises/uxdesign" class="btn btn-default">ux design</a>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<h3 style="margin-top:70px"> ou ver nossa lista de mentores</h3>
<p style="margin-top:30px">Filtros:</p>
<a asp-controller="Mentor" asp-action="Frontend">Front-End</a>
<a asp-controller="Mentor" asp-action="Backend">Back-End</a>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="" style="width:100%">
                <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                <p class="title">@Html.DisplayFor(modelItem => item.Position)</p>
                <p>mentorias em @Html.DisplayFor(modelItem => item.Expertise.Name)</p>
                <a asp-action="Profile" asp-route-id="@item.Id" class="btn btn-default">ver perfil</a>
            </div>
        </div>
    }



</div>



