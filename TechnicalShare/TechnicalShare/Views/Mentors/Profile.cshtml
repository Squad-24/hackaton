                    <div class="card card-content" style="width:210px; height:260px">
                        <div style="font-family:'Open Sans'; font-size:20px; transform:translate(0%,200%)" >@Html.DisplayFor(model => model.Day) de abril </div>
                        <p>
                            @if (Model.Slot != null)
                            {
                                <div type="button" class="btn btn-default schedule-btn" style="font-size:18px">
                                    <input type="radio" name="slot" value="@Model.Day, @Model.Slot" id="slot" required/>
                                    <label for="slot">@Html.DisplayFor(model => model.Slot) </label>
                                </div>
                            }

                            @if (Model.Slot1 != null)
                            {
                                <div type="button" class="btn btn-default schedule-btn" style="font-size:18px; margin-top:-35px">
                                    <input type="radio" name="slot" value="@Model.Day, @Model.Slot1" id="slot1" />
                                    <label for="slot1">@Html.DisplayFor(model => model.Slot1) </label>
                                </div>
                            }
                            
                        </p>
                    </div>
                </div>
