                        <div style="font-family:'Open Sans'; font-size:20px; transform:translate(0%,200%)">@Html.DisplayFor(model => model.Day1) de abril </div>
                        <p>
                            @if (Model.Slot2 != null)
                            {
                                <div type="button" class="btn btn-default schedule-btn" style="font-size:18px">
