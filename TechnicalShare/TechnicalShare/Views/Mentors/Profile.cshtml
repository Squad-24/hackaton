@using TechnicalShare.Models
@model TechnicalShare.Models.Mentor
@{
    ViewData["Title"] = "perfil de " + Model.Name;
}

<div class="profile-card" style="margin-top:50px; left:50%" width="300" height="300">
    <img src="~/images/foto.png" style="margin-top:50px; border-radius:25px" width="300" height="300"  />    
</div>
<div class="profile-card-content">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <p class="title">@Html.DisplayFor(model => model.Position) @Html.DisplayFor(model => model.Level)</p>
    <p style="margin-top:40px; justify-items:center; max-inline-size:900px; overflow-wrap:break-word; line-height:1.8">
        @Html.DisplayFor(model => model.Description)
    </p>
    <p style="margin-top:40px">Mentorias em @Html.DisplayFor(model => model.Expertise.Name)</p>
</div>



<div class="schedule-content">
    <form method="POST" asp-action="Agendar">
        <p class="schedule-title" style="margin-top:-50px">
            <label style="transform: translate(12%, 0%)">Agendamento de mentorias</label>
            <h1 style="font-size:24px; transform:translate(4.4%, 20%); margin-top:40px">Encontros de 30 minutos.</h1>
            <h1 style="font-size:24px; transform:translate(4.4%, -9%); margin-top:20px">Detalhes da conferência enviados após a confirmação.</h1>           
        </p>
        <p class="schedule-title" style="margin:auto; margin-top:80px">            
            <div class="row" style="align-items:center; margin:auto; margin-top:40px; margin-left:40px">

