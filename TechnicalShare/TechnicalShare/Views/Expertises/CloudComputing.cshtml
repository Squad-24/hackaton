@using TechnicalShare.Models
@model IEnumerable<Mentor>

<table style="margin-top:50px" class="table table-striped table-hover" id="table-mentor">
    <thead>
        <tr>
            <th>
                nome
            </th>
            <th>
                email
            </th>
            <th>
                nível de experiência
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    <a asp-controller="Mentors" asp-action="Profile" asp-route-id="@item.Id">ver perfil</a>
                </td>
                <td>
                    <a asp-controller="Mentors" asp-action="Agendar" asp-route-id="@item.Id">agendar</a>
                </td>
            </tr>
        }
    </tbody>

</table>
